<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
			http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
    
    <bean id="jpsolrSubMenu" class="com.agiletec.apsadmin.system.plugin.PluginSubMenuContainer" >
        <property name="subMenuFilePath">
            <value>/WEB-INF/plugins/jpsolr/apsadmin/jsp/common/layouts/subMenu.jsp</value>
        </property>
    </bean>
    
    <bean id="jpsolrConfigAction" 
          class="org.entando.entando.plugins.jpsolr.apsadmin.config.SolrConfigAction" parent="abstractBaseAction" >
        <property name="solrSearchEngineManager" ref="solrSearchEngineManager" />
    </bean>

    <bean id="jpsolrFacetNavResultWidgetAction" scope="prototype"
            class="org.entando.entando.plugins.jpsolr.apsadmin.portal.specialwidget.FacetNavResultWidgetAction" parent="simpleWidgetAction" >
        <property name="contentManager" ref="jacmsContentManager" />
    </bean>

    <bean id="jpsolrFacetNavTreeWidgetAction" scope="prototype"
            class="org.entando.entando.plugins.jpsolr.apsadmin.portal.specialwidget.FacetNavTreeWidgetAction" parent="simpleWidgetAction" >
        <property name="contentManager" ref="jacmsContentManager" />
        <property name="treeNodeManager" ref="CategoryManager" />
        <property name="treeHelper" ref="categoryActionHelper" />
    </bean>
    
</beans>
